<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DriverRegisterKiosk.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="logo_raben.svg"
                HeightRequest="185"
                Aspect="Center" />
            <Entry x:Name="UserInput" 
                   Placeholder="Zadej SPZ" 
                   BackgroundColor="LightBlue" 
                   TextColor="Black" 
                   PlaceholderColor="Black" 
                   HorizontalTextAlignment="Center"
                   FontSize="20"/>
            <CheckBox x:Name="IsImportantCheckbox" />
            <Label Text="Nakládka?" />
            <Button Text="Odeslat" Clicked="OnSendButtonClicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
